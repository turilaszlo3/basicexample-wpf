<Window x:Class="BatchGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="FilePathTextBox" Width="486" > </TextBox>
            <Label FontWeight="Bold">Application Options</Label>
            <CheckBox Name="Feature1CheckBox">Enable feature ABC</CheckBox>
            <CheckBox Name="Feature2CheckBox" Margin="0,0,10,0" >Enable feature XYZ</CheckBox>
            <CheckBox Name="Feature3CheckBox">Enable feature WWW</CheckBox>
            <Button Name="GenerateBtn" Height="27" Width="96" Margin="10" HorizontalAlignment="Left" Click="GenerateBtn_OnClick_Click">Generate</Button>
        </StackPanel>
     
    </Grid>
</Window>
